{% extends '@SonataAdmin/CRUD/action.html.twig' %}

{% block title %}Выберите тип блока{% endblock %}

{% block content %}
    <div class="box box-success">
        <div class="box-header">
            <h3 class="box-title">
                {{ block('title') }}
            </h3>
        </div>
        <div class="box-body">
            {% for provider in providers %}
                {% set metadata = provider.getMetadata() %}
                <div class="col-lg-2 col-md-3 col-sm-4 col-xs-6">
                    <a href="{{ admin.generateUrl('create', {'provider': metadata.getCode()}) }}"
                       class="btn btn-app btn-block"
                       data-toggle="tooltip"
                       data-placement="top"
                       title="{{ metadata.getName() }}"
                    >
                        {{ metadata.getIcon() | raw }}
                        {{ metadata.getName() }}
                    </a>
                </div>
            {% endfor %}
            <div class="clearfix"></div>
        </div>
    </div>
{% endblock %}
